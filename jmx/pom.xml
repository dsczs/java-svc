<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>se.hirt.examples</groupId>
	<artifactId>svc-jmx</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>JMX</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<dependency>
			<groupId>se.hirt.examples</groupId>
			<artifactId>svc-attach</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.13.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<finalName>svc-jmx</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>2.0.0</version>
				<configuration>
					<assembleDirectory>target</assembleDirectory>
					<programs>
						<program>
							<mainClass>se.hirt.examples.svc.jmx.ListSystemProperties</mainClass>
							<id>listSystemProperties</id>
						</program>
						<program>
							<mainClass>se.hirt.examples.svc.jmx.ListSystemPropertiesInProcess</mainClass>
							<id>listSystemPropertiesInProcess</id>
						</program>
						<program>
							<mainClass>se.hirt.examples.svc.jmx.PrintCPULoad</mainClass>
							<id>printLoad</id>
						</program>
						<program>
							<mainClass>se.hirt.examples.svc.jmx.MonitorLiveSetSize</mainClass>
							<id>monitorLiveSetSize</id>
						</program>
						<program>
							<mainClass>se.hirt.examples.svc.jmx.ThreadDump</mainClass>
							<id>threadDump</id>
						</program>
					</programs>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>assemble</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
